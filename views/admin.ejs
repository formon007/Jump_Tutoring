<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Jump Tutoring - Admin Login</title>
        <%- include('partials/header1.ejs') %>    
    </head>
    
    <body>
        <%- include('partials/navbar1.ejs') %>

        <div class="container">
            <div class="row">
    
            <div class="col-sm-6">
                <h1 class="heading-padding">Admin Login</h1>
                <br>
    
                <div class="form-container">
                <form action="/auth/admin" method="post">
    
                    <div class="form-group">
                        <label>Admin Name</label>
                        <input type="text" name="adminname" placeholder="Admin Name" class="form-control" required>
                    </div>

                    <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" placeholder="Password" class="form-control" required>
                    </div>
                    
    
                    <button type="submit" class="btn btn-custom">Login</button>
                </form>
                </div>
            </div>
            </div>

        </div>
        
    </body>
    <br>

    <footer>
        <%- include('partials/footer1.ejs') %>
    </footer>


</html>